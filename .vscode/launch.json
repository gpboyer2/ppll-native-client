      "command": "export NVM_DIR=\"$HOME/.nvm\" && [ -s \"$NVM_DIR/nvm.sh\" ] && . \"$NVM_DIR/nvm.sh\" && npm run dev:full"
    },
    {
      "name": "Electron 主进程",
      "type": "node-terminal",
      "request": "launch",
      "command": "export NVM_DIR=\"$HOME/.nvm\" && [ -s \"$NVM_DIR/nvm.sh\" ] && . \"$NVM_DIR/nvm.sh\" && electron ."
    },
    {
      "name": "Electron Node.js 后端",
      "type": "node-terminal",
      "request": "launch",
      "command": "export NVM_DIR=\"$HOME/.nvm\" && [ -s \"$NVM_DIR/nvm.sh\" ] && . \"$NVM_DIR/nvm.sh\" && node app/backend/app.js"
    },
    {
      "name": "Electron React 前端",
      "type": "node-terminal",
      "request": "launch",
      "command": "export NVM_DIR=\"$HOME/.nvm\" && [ -s \"$NVM_DIR/nvm.sh\" ] && . \"$NVM_DIR/nvm.sh\" && cd app/frontend && npm run dev"
    }
  ]
