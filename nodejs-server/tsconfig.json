{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "module": "commonjs",
    "target": "es2021",
    "moduleResolution": "node",
    "strict": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,

    // 宽松检查选项 - 只检查真正的问题
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strictFunctionTypes": false,
    "strictBindCallApply": false,
    "strictPropertyInitialization": false,
    "noImplicitThis": false,
    "alwaysStrict": false,

    // 不检查未使用的变量/参数（由 ESLint 负责）
    "noUnusedLocals": false,
    "noUnusedParameters": false,

    // 不检查函数返回类型
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": false
  },
  "include": [
    "controller/**/*.js",
    "service/**/*.js",
    "middleware/**/*.js",
    "utils/**/*.js",
    "route/**/*.js",
    "models/**/*.js",
    "validations/**/*.js",
    "app.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "bin",
    "examples",
    "test",
    "tests"
  ]
}
